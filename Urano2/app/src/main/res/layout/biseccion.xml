<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Biseccion">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="88dp"
        android:text="Xi = " />

    <TextView
        android:id="@+id/bx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bx1"
        android:layout_marginTop="152dp"
        android:text="Xs = " />

    <TextView
        android:id="@+id/btol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bx1"
        android:layout_marginEnd="162dp"
        android:text="Tol = " />

    <TextView
        android:id="@+id/bniter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btol"
        android:layout_alignTop="@+id/bx2"
        android:text="Niter = " />

    <EditText
        android:id="@+id/bt3"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx1"
        android:layout_alignStart="@+id/bt4"
        android:ems="10"
        android:inputType="text "
        android:text="" />

    <EditText
        android:id="@+id/bt4"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/bt2"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx2"
        android:layout_alignStart="@+id/bt1"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/bt1"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx1"
        android:layout_toStartOf="@+id/bt5"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/bfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bt1"
        android:layout_marginTop="28dp"
        android:text="F(x) = " />

    <EditText
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bfx"
        android:layout_alignEnd="@+id/bt3"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/b_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btol"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorText"
        android:text="Button" />

</RelativeLayout>