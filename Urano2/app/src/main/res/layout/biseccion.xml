<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Biseccion">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="88dp"
        android:text="Xi = " />

    <TextView
        android:id="@+id/bx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bx1"
        android:layout_marginTop="152dp"
        android:text="Xs = " />

    <TextView
        android:id="@+id/btol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bx1"
        android:layout_centerHorizontal="true"
        android:text="Tol = " />

    <TextView
        android:id="@+id/bniter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btol"
        android:layout_alignTop="@+id/bx2"
        android:text="Niter = " />

    <EditText
        android:id="@+id/bt3"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx1"
        android:layout_toEndOf="@+id/btol"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/bt4"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx2"
        android:layout_toEndOf="@+id/bniter"
        android:ems="10"
        android:inputType="number"
        android:text="80" />

    <EditText
        android:id="@+id/bt2"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx2"
        android:layout_alignStart="@+id/bt1"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/bt1"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bx1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/bfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bx1"
        android:layout_marginTop="26dp"
        android:text="F(x) = " />

    <EditText
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bfx"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <ImageButton
        android:id="@+id/b_submit"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="209dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_donde"
        android:text="Submit"
        android:textColor="@color/colorText" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/b_submit">

        <de.codecrafters.tableview.TableView
            xmlns:table="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tableView"
            android:layout_width="750dp"
            android:layout_height="match_parent"
            table:tableView_columnCount="4" />


    </HorizontalScrollView>





    <ImageButton
        android:id="@+id/b_rand"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/b_submit"
        android:layout_marginStart="106dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_rand"
        android:textColor="@color/colorText" />

    <ImageButton
        android:id="@+id/b_graf"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/b_submit"
        android:layout_toStartOf="@+id/b_borrar"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_graph"
        android:text="Graficar"
        android:textColor="@color/colorText" />

    <ImageButton
        android:id="@+id/b_borrar"
        android:layout_width="98dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/b_submit"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_clean"
        android:text="Borrar"
        android:textColor="@color/colorText" />

    <ImageButton
        android:id="@+id/b_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt5"
        android:layout_marginEnd="17dp"
        android:background="@color/colorText"
        android:src="@drawable/ic_help" />

    <Spinner
        android:id="@+id/b_spinner"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/b_help"
        android:layout_alignTop="@+id/bx1"
        />


</RelativeLayout>
