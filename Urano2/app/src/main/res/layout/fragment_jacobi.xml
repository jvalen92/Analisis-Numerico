<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scrollViewA"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="0dp"
        android:text="A"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scrollViewX"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="0dp"
        android:text="X0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/equal"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="0dp"
        android:text="b"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ejecutar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="14dp"
        android:text="="
        android:textSize="30sp" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="false"
        android:layout_marginStart="332dp"
        android:layout_marginTop="329dp"
        android:ems="10"
        android:hint="  4  "
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false" />

    <TextView
        android:id="@+id/btol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bniter"
        android:layout_alignLeft="@+id/bniter"
        android:layout_alignTop="@id/CrearMatriz"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="41dp"
        android:text="Tol = " />

    <TextView
        android:id="@+id/bniter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/CrearMatriz"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-13dp"
        android:text="Niter = " />

    <EditText
        android:id="@+id/bt3"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CrearMatriz"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="-10dp"
        android:layout_toEndOf="@+id/btol"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/bt4"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CrearMatriz"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="33dp"
        android:layout_toEndOf="@+id/bniter"
        android:ems="10"
        android:inputType="number"
        android:text="80" />






    <ImageButton
        android:id="@+id/b_help"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_alignTop="@+id/CrearMatriz"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="26dp"
        android:background="@color/colorText"
        android:src="@drawable/ic_help_mat" />

    <ScrollView
        android:id="@+id/scrollViewA"
        android:layout_width="215dp"
        android:layout_height="230dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="29dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/matrizA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewB"
        android:layout_width="60dp"
        android:layout_height="229dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/scrollViewX"
        android:layout_toRightOf="@+id/scrollViewA">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/vectorB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewX"
        android:layout_width="94dp"
        android:layout_height="229dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/scrollViewA"
        android:layout_toRightOf="@+id/scrollViewA">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/vectorX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:gravity="center_horizontal">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:id="@+id/CrearMatriz"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="239dp"
        android:layout_marginLeft="239dp"
        android:layout_marginTop="326dp"
        android:onClick="createTable"
        android:text="NuevaMatriz"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/ejecutar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="410dp"
        android:onClick="createTable"
        android:text="Ejecutar"
        android:textColor="@android:color/white" />
</RelativeLayout>