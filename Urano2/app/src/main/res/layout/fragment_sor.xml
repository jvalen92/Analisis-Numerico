<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SOR">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/sor_tol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollViewA"
        android:text="Tol = " />


    <ScrollView
        android:id="@+id/scrollViewA"
        android:layout_width="218dp"
        android:layout_height="232dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/matrizA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewX"
        android:layout_width="64dp"
        android:layout_height="229dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/scrollViewA"
        android:layout_marginEnd="92dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/vectorX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:gravity="center_horizontal">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/sor_tol">

        <de.codecrafters.tableview.TableView
            xmlns:table="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tableView"

            android:layout_width="500dp"
            android:layout_height="match_parent"
            table:tableView_columnCount="4" />
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scrollViewB"
        android:layout_width="60dp"
        android:layout_height="229dp"
        android:layout_alignBottom="@+id/scrollViewA"
        android:layout_alignParentEnd="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/vectorB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <TextView
        android:id="@+id/sor_niter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/scrollViewA"
        android:layout_centerVertical="true"
        android:text="Niter" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="58dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/sor_tol"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="A " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/scrollViewX"
        android:text="X" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="43dp"
        android:text="B" />
</RelativeLayout>