<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PuntoFijo">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/pfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="35dp"
        android:text="f(x) = " />

    <EditText
        android:id="@+id/p_tfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pfx"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/px1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/p_tx1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="Xi = " />

    <EditText
        android:id="@+id/p_tx1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pfx"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/p_tniter"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/px1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/pniter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/p_tx1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="145dp"
        android:text="Iteraciones = " />

    <TextView
        android:id="@+id/p_fprima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignStart="@+id/pfx"
        android:text="f'(x) = " />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p_tfx"
        android:layout_below="@+id/p_tfx"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/ptol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/px1"
        android:layout_marginTop="177dp"
        android:text="Tolerancia = " />

    <EditText
        android:id="@+id/p_tol"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_tx1"
        android:layout_toEndOf="@+id/pfx"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/p_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_tol"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT" />

    <TextView
        android:id="@+id/p_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p_tniter"
        android:layout_below="@+id/p_tx1"
        android:text="Button" />

</RelativeLayout>